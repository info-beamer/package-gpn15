{
    "name": "GPN15 Root",
    "permissions": {
        "network": "Needs to fetch schedule xml"
    },
    "options": [{
        "title": "Appearance",
        "type": "section"
    }, {
        "title": "Background",
        "ui_width": 4,
        "name": "background",
        "type": "resource",
        "valid": ["image", "video", "child"],
        "default": "empty.png"
    },
    
    {
        "title": "Clock",
        "type": "section"
    }, {
